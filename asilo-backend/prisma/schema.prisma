generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id           Int      @id @default(autoincrement())
  nombre       String
  correo       String   @unique
  passwordHash String
  rol          Rol      @default(ENFERMERA)
  creadoEn     DateTime @default(now())

  // ✅ NUEVO (relación inversa)
  documentosSubidos DocumentoPaciente[]
}

model Paciente {
  id            Int      @id @default(autoincrement())
  nombre        String
  apellido      String
  edad          Int?
  sexo          Sexo?
  fechaIngreso  DateTime @default(now())
  estadoSalud   String?
  creadoEn      DateTime @default(now())

  // ✅ NUEVO (relación inversa)
  documentos DocumentoPaciente[]
}

enum Rol {
  ADMIN
  MEDICO
  ENFERMERA
}

enum Sexo {
  M
  F
}


model DocumentoPaciente {
  id          Int            @id @default(autoincrement())
  pacienteId  Int
  paciente    Paciente       @relation(fields: [pacienteId], references: [id], onDelete: Cascade)

  area        AreaDocumento
  titulo      String?
  nombreOriginal String
  mimeType    String
  tamanoBytes Int
  rutaArchivo String        // Ej: "uploads/pacientes/1/social/archivo.pdf"

  creadoEn    DateTime       @default(now())

  // opcional por si luego quieres saber quién lo subió
  usuarioId   Int?
  usuario     Usuario?       @relation(fields: [usuarioId], references: [id], onDelete: SetNull)
}

enum AreaDocumento {
  SOCIAL
  MEDICO
  PSICOLOGICO
  FISICO
  ENFERMERIA
}
